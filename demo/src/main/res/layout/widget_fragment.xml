<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:id="@+id/bt_linear_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="垂直线性"/>

    <Button

        android:id="@+id/bt_linear_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="水平线性"/>

    <Button
        android:id="@+id/bt_grid_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="垂直网格"/>

    <Button
        android:id="@+id/bt_grid_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="水平网格"/>

    <Button
        android:id="@+id/bt_stagged_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="垂直瀑布"/>

    <Button
        android:id="@+id/bt_stagged_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="水平瀑布"/>

</LinearLayout>